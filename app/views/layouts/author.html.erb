<!DOCTYPE html>
<html>
  <head>
    <title>ITblog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-primary">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#navbar" 
          aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" style="color: blue" href="#">IT-Blog</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to t('Home'), home_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right" >
            <% if author_signed_in? %>
              <li><%= link_to t('Create_post'), new_authors_post_path%></li> 
              <li><%= link_to t('My_posts'),authors_posts_path %></li>
              <li><%= link_to t('Log_out'), destroy_author_session_path, method: :delete %></li>
            <% else %>
              <li><%= link_to t('Log_in'),new_author_session_path %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <%= yield %>
  </div>
  </body>
</html>